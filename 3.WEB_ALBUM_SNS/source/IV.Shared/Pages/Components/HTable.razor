<div class="htable-container">
    <table class="htable">
        @if (HeaderContent != null)
        {
            <thead class="htable-header">
            @HeaderContent
            </thead>
        }
        <tbody class="htable-body">
        @RowContent
        </tbody>
    </table>
</div>

@code
{
    [Parameter] public RenderFragment? HeaderContent { get; set; }
    [Parameter] public RenderFragment? RowContent { get; set; }
}